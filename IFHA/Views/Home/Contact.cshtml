
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Page Title
============================================= -->
<section id="page-title" class="page-title-pattern">

    <div class="container clearfix">
        <h1>Contact</h1>
        <p class="mb-0 mt-1">IFHA is a name synonymous with originality, creativity and an endeavor towards perfection.  </p>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Home/index">Home</a></li>
            <li class="breadcrumb-item" aria-current="page">Contact</li>
        </ol>
    </div>

</section>
<!-- #page-title end -->
<!-- Content -->
<section id="content">

    <div class="content-wrap">

        <div class="container clearfix">

            <!-- Contact Form -->
            <div class="col_half">

                <div class="fancy-title title-dotted-border">
                    <h3>Send us an Email</h3>
                </div>

                <div class="form-widget">

                    <div class="form-result"></div>

                    <form class="nobottommargin" method="post" id="" name="" action="#">

                        <div class="form-process"></div>

                        <div class="col_half">
                            <label for="template-contactform-name">Name <small>*</small></label>
                            <input type="text" id="template-contactform-name" name="Name" value="" class="sm-form-control required" />
                        </div>

                        <div class="col_half col_last">
                            <label for="template-contactform-email">Email <small>*</small></label>
                            <input type="email" id="template-contactform-email" name="Email" value="" class="required email sm-form-control" />
                        </div>

                        <div class="col_half">
                            <label for="template-contactform-phone">Phone</label>
                            <input type="text" id="template-contactform-phone" name="Phone" value="" class="sm-form-control required" />
                        </div>


                        <div class="col_half col_last">
                            <label for="template-contactform-subject">Subject <small>*</small></label>
                            <input type="text" id="template-contactform-subject" name="Subject" value="" class="required sm-form-control" />
                        </div>

                        <div class="clear"></div>

                        <div class="col_full">
                            <label for="template-contactform-message">Message <small>*</small></label>
                            <textarea class="required sm-form-control" id="template-contactform-message" name="Message" rows="4" cols="30"></textarea>
                        </div>

                        <div class="col_full">
                            <button name="submit" type="submit" id="submit-button" tabindex="5" value="Submit" class="button button-3d nomargin">Submit Comment</button>
                        </div>

                        <input type="hidden" name="prefix" value="template-contactform-">

                    </form>
                </div>

            </div><!-- Contact Form End -->
            <!-- Google Map
            ============================================= -->
            <div class="col_half col_last">

                <div class="align-items-center d-flex mapouter">
                    <div class="gmap_canvas"><iframe width="100" height="170" id="gmap_canvas" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3617.018230138943!2d67.0874159150049!3d24.965494384004472!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xff954c6078d94b72!2sIFHA%20Enterprises!5e0!3m2!1sen!2s!4v1614604260530!5m2!1sen!2s" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe></div>
                    <style>
                        .mapouter {
                            margin: auto;
                            position: relative;
                            text-align: center;
                            height: 475px;
                            width: auto;
                            border-radius: 10px;
                        }

                        .gmap_canvas {
                            overflow: hidden;
                            background: none !important;
                            height: 360px;
                            width: 500px;
                            border-radius: 10px;
                        }
                    </style>
                </div>

            </div><!-- Google Map End -->

            <div class="clear"></div>

            <!-- Contact Info
            ============================================= -->
            <div class="row clear-bottommargin">

                <div class="col-lg-6 col-md-6 bottommargin clearfix">
                    <div class="feature-box fbox-center fbox-bg fbox-plain">
                        <div class="fbox-icon">
                            <a href="#"><i class="icon-map-marker2"></i></a>
                        </div>
                        <h3>Our Office<span class="subtitle">Plot # 667 / W1, North Karachi Industrial Area Sector 16-C Gabol Colony, Karachi, Karachi City, Sindh 75850</span></h3>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 bottommargin clearfix">
                    <div class="feature-box fbox-center fbox-bg fbox-plain">
                        <div class="fbox-icon">
                            <a href="#"><i class="icon-phone3"></i></a>
                        </div>
                        <h3>Speak to Us<span class="subtitle">0313-2212791</span></h3>
                    </div>
                </div>

                @*<div class="col-lg-3 col-md-6 bottommargin clearfix">
                    <div class="feature-box fbox-center fbox-bg fbox-plain">
                        <div class="fbox-icon">
                            <a href="#"><i class="icon-instagram"></i></a>
                        </div>
                        <h3>Follow our Insta<span class="subtitle">ifha.insta.com</span></h3>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 bottommargin clearfix">
                    <div class="feature-box fbox-center fbox-bg fbox-plain">
                        <div class="fbox-icon">
                            <a href="#"><i class="icon-facebook"></i></a>
                        </div>
                        <h3>Follow on FB<span class="subtitle">2.3M Followers</span></h3>
                    </div>
                </div>*@

            </div><!-- Contact Info End -->

        </div>

    </div>

</section>
<!-- #content end -->

